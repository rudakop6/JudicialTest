<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:JudicialTest">


    <Style x:Key="ScrollViewerBase.Style" TargetType="ScrollViewer">
        <Setter Property="CanContentScroll" Value="True"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>
    
    <Style x:Key="ScrollViewer_PropertiesEntity.Style" TargetType="ScrollViewer" BasedOn="{StaticResource ScrollViewerBase.Style}">
        <Setter Property="MinWidth" Value="500"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Visibility" Value="Hidden"/>
    </Style>
</ResourceDictionary>