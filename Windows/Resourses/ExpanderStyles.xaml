<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:JudicialTest">

    <Style x:Key="ExpanderBase.Style" TargetType="Expander">
        
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="AliceBlue"/>        
    </Style>
    <Style x:Key="Expander_Expanded.Style" TargetType="Expander" BasedOn="{StaticResource ExpanderBase.Style}">
        <Setter Property="IsExpanded" Value="True"/>
    </Style>
    <Style x:Key="Expander_Hidden.Style" TargetType="Expander" BasedOn="{StaticResource ExpanderBase.Style}">
        <Setter Property="IsExpanded" Value="False"/>
    </Style>   
</ResourceDictionary>